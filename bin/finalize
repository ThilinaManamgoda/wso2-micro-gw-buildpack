#!/usr/bin/env bash

set -euo pipefail

APP_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4

GREEN_BOLD="\e[1m\e[32m"
GREEN="\e[32m"

export BUILD_PACK_DIR=$(dirname $(dirname $0))
export JAVA_HOME=${DEPS_DIR}/${DEPS_IDX}/openjdk-JDK_VERSION


WSO2_AM_GW_HOME="wso2am-micro-gw-2.6.0"

# parameters for micro gateway
PROJECT_NAME=""
API_NAME=""
VERSION=""
APIM_SERVER_URL=""
APIM_USER_NAME=""
APIM_PASSWORD=""
ANALYTICS_ENABLED=""


echo "${GREEN_BOLD}-----> Running finalize"

source "${APP_DIR}/wso2-am-gw"


TMP_DIR=$(mktemp -d -t finalizeXXX)

echo "${GREEN}-----> Unzipping ${BUILD_PACK_DIR}/resources/${WSO2_AM_GW_HOME}.zip"
if ! unzip -q -d ${TMP_DIR} ${BUILD_PACK_DIR}/resources/${WSO2_AM_GW_HOME}.zip;
 then
    echo "unable to unzip ${WSO2_AM_GW_HOME}.zip"
    exit 1
fi

echo "${GREEN}-----> Setting up Micro gateway"
if ! ${TMP_DIR}/${WSO2_AM_GW_HOME}/bin/micro-gw setup cf -a ${API_NAME} -v ${VERSION} \
-u ${APIM_USER_NAME} -p ${APIM_PASSWORD} -s ${APIM_SERVER_URL} -t lib/platform/bre/security/ballerinaTruststore.p12 -w ballerina;
then
    echo "unable to create the project: cf"
    exit 1
fi

echo "${GREEN}-----> Building Micro gateway"
if ! ${TMP_DIR}/${WSO2_AM_GW_HOME}/bin/micro-gw build cf;
then
    echo "unable to create the project: cf"
    exit 1
fi

echo "${GREEN}-----> Unzipping Micro gateway distribution"
if ! unzip -q -d ${APP_DIR} $(pwd)/cf/target/micro-gw-cf.zip;
 then
   echo "unable to unzip the project zip: micro-gw-cf.zip"
   exit 1
fi

echo "${GREEN}-----> Setting up permission"
if ! chmod +x ${APP_DIR}/micro-gw-cf/bin/gateway;
 then
    echo  "couldn't configure permission for ${APP_DIR}/micro-gw-cf/bin/gateway"
    exit 1
fi

echo "${GREEN}-----> Create the directory ${APP_DIR}/.profile.d"
if ! mkdir -p ${APP_DIR}/.profile.d;
 then
    echo  "couldn't create the directory ${APP_DIR}/.profile.d"
    exit 1
fi

echo "${GREEN}-----> Setting up environment variables"
if ! echo "export JAVA_HOME=/home/vcap/deps/${DEPS_IDX}/openjdk-JDK_VERSION" >> "${APP_DIR}/.profile.d/env";
 then
    echo  "couldn't configure the env in ${APP_DIR}/.profile.d"
    exit 1
fi
